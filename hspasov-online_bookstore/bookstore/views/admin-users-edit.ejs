<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Bookstore</title>
  </head>
  <body>
    <div id="content">
      <div>
        <form action="..">
          <button>Back</button>
        </form>
      </div>
      <div>
        <form action='/admin/users/<%= user.id %>/edit' method='POST'>
          <label>
            Username:
            <input
              name='username'
              value='<%= user.username %>'
              type='text' />
          </label>
          <br />
          <label>
            Email:
            <input
              name='email'
              value='<%= user.email %>'
              type='text' />
          </label>
          <br />
          <label>
            First name:
            <input
              name='firstName'
              value='<%= user.first_name %>'
              type='text' />
          </label>
          <br />
          <label>
            Last name:
            <input
              name='lastName'
              value='<%= user.last_name %>'
              type='text' />
          </label>
          <br />
          <label>
            Country:
            <input
              name='country'
              value='<%= user.country %>'
              type='text' />
          </label>
          <br />
          <label>
            Address:
            <input
              name='address'
              value='<%= user.address %>'
              type='text' />
          </label>
          <br />
          <label>
            Phone number:
            <input
              name='phoneNumber'
              value='<%= user.phone_number %>'
              type='text' />
          </label>
          <br />
          <label>
            Currency:
            <input
              name='currency'
              value='<%= user.currency %>'
              type='text' />
          </label>
          <br />
          <label>
            Date of birth:
            <input
              name='dateOfBirth'
              value='<%= user.date_of_birth %>'
              type='text' />
          </label>
          <br />
          <input type='submit' value='Edit user' />
        </form>
      </div>
    </div>
    <script type="text/javascript" src="./users.js"></script>
  </body>
</html>